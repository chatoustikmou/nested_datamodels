window = {
	name = "nested_datamodels_widget"
	# datacontext = "[Culture.GetReformation]"
	widgetid = "culture_window_id"
	layer = windows_layer
	movable = no
    
	using = Window_Size_Sidebar
	using = Window_Background_Sidebar

    hbox = {
        datamodel = "[GetGlobalList('outer_model')]"
        item = {
            vbox = {
                text_single = {
                    text = "[Localize(Concatenate(Scope.GetFlagName,'_name'))]"
                }
                vbox = {
                    datamodel = "[GetGlobalList(Scope.GetFlagName)]"
                    item = {
                        container = {
                            text_single = {
                                text = "[Localize(Concatenate(Scope.Var('key').GetFlagName,'_name'))]"
                            }
                        }
                    }
                }
            }
        }
    }
}